! urxvt

!eURxvt*geometry:                115x40
!URxvt*font: xft:Liberation Mono:pixelsize=22:antialias=false:hinting=true
URxvt*font: xft:Inconsolata:pixelsize=30:antialias=true:hinting=true
URxvt*boldFont: xft:Inconsolata:bold:pixelsize=30:antialias=false:hinting=true
!URxvt*boldFont: xft:Liberation Mono:bold:pixelsize=22:antialias=false:hinting=true
!eURxvt*depth:                24
URxvt*borderless: 1
URxvt*scrollBar:            false
URxvt*saveLines:  2000
URxvt.transparent:      true
URxvt*.shading: 15


! Meta modifier for keybindings
!URxvt.modifier: super

!! perl extensions
eURxvt.perl-ext:             default,url-select,clipboard

! url-select (part of urxvt-perls package)
!eURxvt.keysym.M-u:           perl:url-select:select_next
!eURxvt.url-select.autocopy:  true
!eURxvt.url-select.button:    2
!eURxvt.url-select.launcher:  google-chrome-stable
!eURxvt.url-select.underline: true

! Nastavuje kopirovani
URxvt.keysym.Control-V: perl:clipboard:paste
URxvt.keysym.Control-C:   perl:clipboard:copy

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

!urxvt color scheme:

URxvt*background: #002b36
URxvt*foreground: #839496

URxvt*cursorColor: #00FF00

!eURxvt*colorUL: #86a2b0

! black
! URxvt*color0  : #2E3436
! URxvt*color8  : #555753
! URxvt*color0  : #111111
URxvt*color8  : #231a10
URxvt*color0  : #002b36
! red
URxvt*color1  : #dc322f
URxvt*color9  : #dc322f
! green
URxvt*color2  : #859900
URxvt*color10 : #859900
! yellow
URxvt*color3  : #b58900
URxvt*color11 : #b58900
! blue
URxvt*color4  : #268bd2
URxvt*color12 : #268bd2
! magenta
URxvt*color5  : #d33682
URxvt*color13 : #d33682
! cyan
URxvt*color6  : #2aa198
URxvt*color14 : #2aa198
! white
URxvt*color7  : #839496
URxvt*color15 : #83a1a1
